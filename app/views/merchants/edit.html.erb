
<%= form_tag "/merchants/#{@merchant.id}", method: :patch do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, @merchant.name %><br>

  <%= label_tag :address %>
  <%= text_field_tag :address, @merchant.address %><br>

  <%= label_tag :city %>
  <%= text_field_tag :city, @merchant.city %><br>

  <%= label_tag :state %>
  <%= text_field_tag :state, @merchant.state %><br>

  <%= label_tag :zip %>
  <%= text_field_tag :zip, @merchant.zip %><br>

  <%= submit_tag 'Submit Changes' %>
<% end %><br><hr>

<%= link_to '<< Back to Merchants List', "/merchants" %>
