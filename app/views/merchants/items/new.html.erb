<%= form_tag("/merchants/#{@merchant_id}/items") do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %><br>

  <%= label_tag :description %>
  <%= text_area_tag :description %><br>

  <%= label_tag :price %>
  <%= number_field_tag :price, "Price in USD" %><br>

  <%= label_tag :inventory %>
  <%= number_field_tag :inventory %><br>

  <%= label_tag :image %>
  <%= text_field_tag :image, "image address" %><br>

  <%= submit_tag "Create Item" %><br>
<% end %>
