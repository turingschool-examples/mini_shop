<h1><%= @merchant.name %></h1>

  <h5><% @items.each do |item| %></h5>
    <h2><%= item.name %></h2>
    <p>Price: $<%= item.price %></p>
    <p><%= image_tag(item.image_url, size: "250x250") %></p>
    <p>Status: <%= item.status %></p>
    <p>Inventory: <%= item.inventory %></p>
  <% end %>

  <%= link_to "New Item", "/merchants/#{@merchant.id}/items/new" %>
