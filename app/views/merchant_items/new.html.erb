<%= form_tag "/merchants/#{@merchant_id}/items" do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>

  <%= label_tag :price %>
  <%= text_field_tag :price %>

  <%= label_tag :description %>
  <%= text_field_tag :description %>

  <%= label_tag :image %>
  <%= file_field_tag :image %>

  <%= label_tag :inventory %>
  <%= text_field_tag :inventory %>

  <%= submit_tag 'Create Item' %>
<% end %>
