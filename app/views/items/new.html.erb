<h1 class="mt-4">Create a New Item for <%= link_to @merchant.name, "/merchants/#{@merchant.id}" %></h1>
<br />

<%= form_tag "/merchants/#{@merchant.id}/items" do %>

  <p>
    <%= label_tag :name %>
    <%= text_field_tag 'item[name]', nil, minlength: 5, required: true, class: 'form-control' %>
  </p>

  <p>
    <%= label_tag :price %>
    <%= number_field_tag 'item[price]', nil, min: 0, step: 0.01, required: true, class: 'form-control' %>
  </p>

  <p>
    <%= label_tag :description %>
    <%= text_area_tag 'item[description]', nil, minlength: 10, required: true, class: 'form-control' %>
  </p>

  <p>
    <%= label_tag 'Image (URL)' %>
    <%= text_field_tag 'item[image]', nil, minlength: 5, required: true, class: 'form-control' %>
  </p>

  <p>
    <%= label_tag 'Quantity in Stock' %>
    <%= number_field_tag 'item[inventory]', nil, min: 0, step: 1, required: true, class: 'form-control' %>
  </p>
  <br />
  <p>
    <%= submit_tag 'Create Item', class: 'btn btn-primary' %>
  </p>

<% end %>
