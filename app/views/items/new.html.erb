
<header>
<%= link_to '<< Merchants List', "/merchants" %><br>
<%= link_to '<< Items List', "/items" %>
</header><hr>

<%= form_tag "/merchants/#{@merchant.id}/items", method: :post do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %><br>

  <%= label_tag :description %>
  <%= text_field_tag :description %><br>

  <%= label_tag :price %>
  <%= text_field_tag :price %><br>

  <%= label_tag :image %>
  <%= text_field_tag :image %><br>

  <%= label_tag :inventory %>
  <%= text_field_tag :inventory %><br>

  <%= submit_tag 'Create Item' %>
<% end %><br><hr>
