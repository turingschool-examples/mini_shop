<p><%= link_to 'Edit', "/items/#{@item.id}/edit" %></p>

<img src="<%= @item.image %>" style="width:142px;height:142px;">

<h1><%= link_to @item.name, "/items/#{@item.id}" %></h1>


<p>Description: <%= @item.description %></p>

<p>Price: $<%= @item.price %></p>

<p>Status: <%= @item.status %></p>

<p>Stock: <%= @item.inventory %></p>

<p>Seller: <%= link_to @item.merchant.name, "/merchants/#{@item.merchant.id}" %></p>
<%= button_to 'Delete', "/items/#{@item.id}", method: :delete %>
