<section class="page-wrapper">
  <div class="page-title-bar">
    <span class="page-title">Item Info</span>
    <span>
      <%= link_to "Edit Item Info", "/items/#{@item.id}/edit", class: "btn" %>
      <%= link_to "Delete Item", "/items/#{@item.id}", method: :delete, class: "btn", id: "delete" %>
    </span>
  </div>
  <section class="margin">
    <h2><%= @item.name %></h2>
    <div class="show-img-container">
      <img src="<%= @item.image %>" class="item-show-image">
    </div>
    <p>Description: <%= @item.description %></p>
    <p>Price: <%= number_to_currency @item.price %></p>
    <p>Status: <%= @item.status %></p>
    <p>Inventory: <%= @item.inventory %></p>
    <p>Merchant: <%= link_to "#{@item.merchant.name}", "/merchants/#{@item.merchant.id}" %></p>
  </section>
</section>
