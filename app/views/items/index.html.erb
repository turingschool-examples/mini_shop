<h1>Items</h1>

<% @items.each do |item| %>
 <%= link_to item.name, "/items/#{item.id}" %>
 <p><%= item.description %></p>
 <p><%= item.price %></p>
  <%= image_tag item.image, style: 'height:33%;width:33%;' %>
 <p><%= item.status %></p>
 <p><%= item.inventory %></p>
 <p><%= item.merchant_name %></p>
<% end %>