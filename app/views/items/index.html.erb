<h1>All Items</h1>
<hr>
<% @items.each do |item| %>
  <hr>
  <p><%= item.name %></p>
  <p><%= item.description %></p>
  <p><%= number_to_currency(item.price) %></p>
  <img src="<%= item.image %>">
  <p><%= item.active_status %></p>
  <p><%= item.inventory %></p>
  <p> <%= item.merchant.name %> </p>
  <hr>
<% end %>
