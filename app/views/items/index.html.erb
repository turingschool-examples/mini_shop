<h1>All Items</h1>

<h4><% @items.each do |item| %></h4>
  <h2><%= item.name %></h2>
  <p>Description: <%= item.description %></p>
  <p>Price: $<%= item.price %></p>
  <p><%= image_tag(item.image_url, size: "250x250") %></p>
  <p>Status: <%= item.status %></p>
  <p>Inventory: <%= item.inventory %></p>
  <p>Merchant: <%= item.merchant.name %></p>
<% end %>
