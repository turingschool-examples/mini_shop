<html>
  <head>
    <%= stylesheet_link_tag "main" %>
  </head>

  <body>
    <div class="pageheaders">
      <h1>All Items</h1>
    </div>

    <div class="itemstables">

    <table id="t01">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Image</th>
        <th>Price</th>
        <th>Status</th>
        <th>Inventory</th>
        <th>Merchant</th>
      </tr>
      <% @items.each do |item| %>
      <tr>
        <td><a style="color: #000000; text-decoration: underline;" href= <%= "/items/#{item.id}"%>> <%= item.name %></a></td>
        <td><%= item.description %></td>
        <td><img src = <%= item.image %> ></img></td>
        <td><%= number_to_currency(item.price) %></td>
        <td><%= item.status %></td>
        <td><%= item.inventory %></td>
        <td><a style="color: #000000; text-decoration: underline;" href= <%= "/merchants/#{item.merchant_id}"%>> <%= item.merchant.name %> </a></td>
      </tr>
        <% end %>
      </table>

    </div>
  </body>
</html>
