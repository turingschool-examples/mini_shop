<h1> All Items </h1>

<ul id="items">
  <% @items.each do |item| %>
      <%= link_to item.name, "items/#{item.id}" %>
      <p>Description: <%= item.description %></p>
      <p>Price: $<%= '%.2f' % item.price %></p>
      <p>Image: <%= image_tag(item.image_url, {:style =>'width:250px;height:250px'}) %></p>
      <% if item.status == true %>
        <p>Status: active</p>
      <% elsif item.status == false %>
        <p>Status: inactive</p>
      <% end %>
      <p>Inventory: <%= item.inventory %></p>
      <p>Merchant: <%= link_to "#{item.merchant.name}", "/merchants/#{item.merchant_id}" %></p>
      <br />
      <br />
  <% end %>
</ul>
