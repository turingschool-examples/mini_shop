<h1>Items</h1>

  <% @items.each do |item| %>
    <section class="item-<%= item.id %> ">
      <h2><%= item.name %></h2>
      <p>Description: <%= item.description %></p>
      <p>Price: <%= item.price %></p>
      <p><%= item.image %></p>
      <p>Active: <%= item.active %></p>
      <p>Inventory: <%= item.inventory %></p>
      <p>Merchant: <%= item.merchant.name %></p>
    </section>
  <% end %>
