<h1 class="mt-4">Edit Item</h1>
<br />

<%= form_tag "/items/#{@item.id}", method: :patch do %>

  <p>
    <%= label_tag :name %>
    <%= text_field_tag 'item[name]', @item.name, minlength: 5, required: true, class: 'form-control' %>
  </p>

  <p>
    <%= label_tag :price %>
    <%= number_field_tag 'item[price]', @item.price, min: 0, step: 0.01, required: true, class: 'form-control' %>
  </p>

  <p>
    <%= label_tag :description %>
    <%= text_area_tag 'item[description]', @item.description, minlength: 10, required: true, class: 'form-control' %>
  </p>

  <p>
    <%= label_tag 'Image (URL)' %>
    <%= text_field_tag 'item[image]', @item.image, minlength: 5, required: true, class: 'form-control' %>
  </p>

  <p>
    <%= label_tag 'Quantity in Stock' %>
    <%= number_field_tag 'item[inventory]', @item.inventory, min: 0, step: 1, required: true, class: 'form-control' %>
  </p>
  <br />
  <p>
    <%= submit_tag 'Update Item', class: 'btn btn-primary' %>
  </p>

<% end %>
