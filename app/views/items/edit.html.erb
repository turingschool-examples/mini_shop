<%= form_tag "/items/#{@item.id}", method: :patch do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %><br>
  <%= label_tag :description %>
  <%= text_field_tag :description %><br>
  <%= label_tag :price %>
  <%= text_field_tag :price %><br>
  <%= label_tag :image %>
  <%= text_field_tag :image %><br>
  <%= label_tag :inventory %>
  <%= text_field_tag :inventory %><br><br>

  <%= submit_tag 'Update item' %>
<% end %>
