
<header>
  <%= link_to '<< Merchants List', "/merchants" %><br>
  <%= link_to '<< Items List', "/items" %>
</header><hr>

<%= form_tag "/items/#{@item.id}", method: :patch do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, @item.name %><br>

  <%= label_tag :description %>
  <%= text_field_tag :description, @item.description %><br>

  <%= label_tag :price %>
  <%= text_field_tag :price, @item.price %><br>

  <%= label_tag :inventory %>
  <%= text_field_tag :inventory, @item.inventory %><br>

  <%= label_tag :image %>
  <%= text_field_tag :image, @item.image %><br>

  <%= submit_tag 'Submit Changes' %>
<% end %><br><hr>
