<%= form_tag("/items/#{@item.id}", method: :patch) do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>

  <%= label_tag :price %>
  <%= number_field_tag :price %>

  <%= label_tag :description %>
  <%= text_area_tag :description %>

  <%= label_tag :inventory %>
  <%= number_field_tag :inventory %>

  <%= label_tag :image %>
  <%= text_field_tag :image, "Thumbnail URL" %>

  <%= submit_tag "Submit" %>
<% end %>
